<%- include('../partials/head') %>
    <div class="container mt-4">
        <div class="card mx-auto" style="max-width: 500px; padding: 10px;">
            <img src="https://images.pexels.com/photos/301920/pexels-photo-301920.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                class="card-img-top" alt="homework photo" style="height: 200px; object-fit: cover;">
            <div class="card-body" style="padding: 10px;">
                <h4 class="card-title text-primary fw-bold" style="font-size: 1.3rem;">
                    <%= homework.courseCode %>
                </h4>
                <p class="card-text" style="font-size: 1rem; margin-bottom: 5px;">
                    <strong>Due Date:</strong>
                    <%= new Date(homework.dueDate).toLocaleDateString('en-GB') %>
                </p>
                <p class="card-text" style="font-size: 1rem; margin-bottom: 5px;">
                    <strong>Additional Notes:</strong>
                    <%= homework.notes %>
                </p>
                <p class="card-text" style="font-size: 1rem; margin-bottom: 5px;">
                    <strong>Status:</strong>
                    <%= homework.completed ? "✅ Completed" : "❌ Incomplete" %>
                </p>
                <p class="text-muted" style="font-size: 0.9rem;">
                    <strong>Listed by:</strong>
                    <%= owner.username || 'Unknown' %>
                </p>

                <div class="d-flex gap-2" style="justify-content: space-between; margin-top: 10px;">
                    <a href="/users/<%= user._id %>/homeworks" class="btn btn-outline-primary"
                        style="font-size: 0.9rem;">Back to Homeworks</a>
                    <% if (homework.user._id.equals(user._id)) { %>
                        <form action="/users/<%= user._id %>/homeworks/<%= homework._id %>?_method=DELETE" method="POST"
                            class="d-inline">
                            <button type="submit" class="btn btn-danger" style="font-size: 0.9rem;">Delete</button>
                        </form>
                        <a href="/users/<%= user._id %>/homeworks/<%= homework._id %>/edit" class="btn btn-warning"
                            style="font-size: 0.9rem;">Edit</a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>